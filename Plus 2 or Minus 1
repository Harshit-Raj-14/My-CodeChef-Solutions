class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner sc=new Scanner(System.in);
		int t=sc.nextInt();
		while(t-->0){
		    int x = sc.nextInt();
		    if(x==0){
		        System.out.println(1);
		        continue;
		    }
		    System.out.println(2*x + x);
		}
	}
}
