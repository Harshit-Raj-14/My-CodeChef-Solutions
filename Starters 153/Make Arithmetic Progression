import java.util.*;
class Codechef{
	public static void main (String[] args) throws java.lang.Exception{
		Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
        while(t-- > 0) {
            long x = sc.nextLong();
            long y = sc.nextLong();
            long z = sc.nextLong();
            int arr[] = new int[3];
            if(2*y==(x+z)) System.out.println(0);
            else System.out.println(1);
        }
	}
}