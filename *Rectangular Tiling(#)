class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		while(t-->0){
		    int b = sc.nextInt();   
		    int l = sc.nextInt();
		    if((b&1)==0 || (l&1)==0) System.out.println("YES");
		    else System.out.println("NO");
		}
		sc.close();
	}
}
